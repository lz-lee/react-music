@import "~common/styl/variable.styl"
@import "~common/styl/mixin.styl"
.header-wrapper
  position fixed
  width 100%
  height 55px
  text-align center
  z-index: 3
  .header-back
    position absolute
    top: 0
    left: 6px
    .icon-back
      display: block
      padding: 10px
      font-size: $font-size-large-x
      color: $color-theme
  .title
      position: absolute
      top: 0
      left: 10%
      z-index: 3
      width: 80%
      no-wrap()
      text-align: center
      line-height: 40px
      font-size: $font-size-large
      color: $color-text