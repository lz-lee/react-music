@import "~common/styl/variable.styl"
@import "~common/styl/mixin.styl"

.m-header
  position relative
  height 44px
  text-align center 
  color $color-theme
  .icon
    display inline-block
    vertical-align top 
    margin-top 6px
    width 30px
    height 32px
    margin-right 9px
    bg-image('logo')
    background-size 30px 32px
  .text
    display: inline-block
    vertical-align top
    line-height 44px
    font-size $font-size-large
  .mine
    position absolute
    top 0
    right: 0
    .icon-mine
      display: block
      padding: 12px
      font-size: 20px
      color: $color-theme