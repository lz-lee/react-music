@import "~common/styl/variable.styl"

.album-detail-wrapper
  position fixed
  top 0
  left 0
  right 0
  bottom 0px
  background-color $color-background
  z-index 3
  .bg-image
    position: relative
    width: 100%
    height: 0
    padding-top: 70%
    transform-origin: top
    background-size: cover
    .play-wrapper
        position  absolute
        bottom 20px
        z-index 4
        width 100%
        .play
            box-sizing border-box
            width 135px
            padding 7px 0
            margin 0 auto
            text-align center
            border 1px solid $color-theme
            color $color-theme
            border-radius 100px
            font-size 0
            .icon-play
                display inline-block
                vertical-align middle
                margin-right 6px
                font-size $font-size-medium-x
            .text
                display inline-block
                vertical-align middle
                font-size $font-size-small
    .filter
      position absolute
      top 0
      left 0
      width 100%
      height 100%
      background rgba(7, 17, 27, 0.4)
  .scroll-wrapper
    position absolute
    top 0
    bottom 0
    width 100%
    .album-detail
      padding 20px 30px
      .song-count
        font-size $font-size-medium
      .song-list
        margin-top 20px
        .song-item
          padding-bottom 25px
          .song-name
            height 16px
            color: $color-text
          .song-singer
            margin-top 8px
            font-size $font-size-small
            color $color-text-l
      .album-info
        padding-bottom: 25px
        .title
          font-size: $font-size-large
          font-weight: 100
          text-align: center
          color: $color-text
        .album-desc
          font-size $font-size-medium
          margin-top 15px
          line-height 22px